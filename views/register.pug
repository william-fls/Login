extends layout

block content
  .form-container
    h2 Registrar Novo Usuário
    form(action="/register", method="POST")
      .form-group
        label(for="username") Nome de Usuário:
        input.form-control(type="text", id="username", name="username", required)
      .form-group
        label(for="password") Senha:
        input.form-control(type="password", id="password", name="password", required)
      button.btn.btn-success(type="submit") Registrar